    </div>





    <div id="id02" class="modal">
        <!-- <span onclick="document.getElementById('id02').style.display='none'" class="close"
            title="Close Modal">&times;</span> -->
        <span onclick="xcloseSignup()" class="close" title="Close Modal">&times;</span>
        <!-- <form class="modal-content" action="https://localhost:8080/user/login" method="POST"> -->
        <form class="modal-content" action="/user/login" method="POST">
            <div class="container">
                <h1>Sign Up</h1>
                <p>Please fill in this form to create an account.</p>
                <hr>
                <label for="name"><b>Name</b></label>
                <input type="text" placeholder="Enter Your Name">

                <label for="email"><b>Email</b></label>
                <input type="email" placeholder="Enter Email" name="email" required>

                <label for="mobile"><b>Mobile No.</b></label>
                <input type="text" placeholder="Mobile No." name="mobile" id="mob_no">

                <label for="psw"><b>Password</b></label>
                <input type="password" placeholder="Enter Password" name="psw" required>

                <label for="psw-repeat"><b>Repeat Password</b></label>
                <input type="password" placeholder="Repeat Password" name="psw-repeat" required>

                <!-- <label>
                    <input type="checkbox" checked="checked" name="remember" style="margin-bottom:15px"> Remember me
                </label> -->

                <!-- <p>By creating an account you agree to our <a href="#" style="color:dodgerblue">Terms & Privacy</a>.</p> -->

                <div class="clearfix">
                    <button type="button" onclick="xcloseSignup()" class="cancelbtn">Cancel</button>
                    <button type="submit" class="signupbtn">Sign Up</button>
                </div>
            </div>
        </form>
    </div>

    <script>

        function loginModal() {
            document.getElementById('id01').style.display = 'block';
            document.getElementById("blurContainer").classList.add("blur");
        }
        function signupModal() {
            document.getElementById('id02').style.display = 'block';
            document.getElementById("blurContainer").classList.add("blur");
        }
        // Get the modal1
        var modal1 = document.getElementById('id01');
        // Get the modal2
        var modal2 = document.getElementById('id02');
        function xcloseLogin() {
            document.getElementById('id01').style.display = 'none';
            document.getElementById("blurContainer").classList.remove("blur");
        }
        function xcloseSignup() {
            document.getElementById('id02').style.display = 'none';
            document.getElementById("blurContainer").classList.remove("blur");

        }

        // When the user clicks anywhere outside of the modal, close it
        window.onclick = function (event) {
            if (event.target == modal1) {
                modal1.style.display = "none";
                document.getElementById("blurContainer").classList.remove("blur");

            }
            if (event.target == modal2) {
                modal2.style.display = "none";
                document.getElementById("blurContainer").classList.remove("blur");


            }
        }



    </script>

    <script>
        function openCity(evt, cityName) {
            var i, tabcontent, tablinks;
            tabcontent = document.getElementsByClassName("tabcontent");
            for (i = 0; i < tabcontent.length; i++) {
                tabcontent[i].style.display = "none";
            }
            tablinks = document.getElementsByClassName("tablinks");
            for (i = 0; i < tablinks.length; i++) {
                tablinks[i].className = tablinks[i].className.replace(" active", "");
            }
            document.getElementById(cityName).style.display = "block";
            evt.currentTarget.className += " active";
        }

        // Get the element with id="defaultOpen" and click on it
        document.getElementById("defaultOpen").click();
    </script>
