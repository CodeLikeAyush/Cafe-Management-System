    <form id="signup_form" class="modal-content animate">
        <div id="cust_details" class="container" style="border: 1px solid green;padding: 30px;margin: 20px;">

            <h3 style="color:green;">Sign Up</h3><br>
            <hr><br>


            <label for="name"><b>Name</b></label>
            <input type="text" placeholder="Enter Name" name="name" id="usr_name" required>

            <label for="email"><b>Email</b></label>
