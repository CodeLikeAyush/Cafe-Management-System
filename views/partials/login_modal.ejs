<div id="id01" class="modal">

    <form id="login_form" class="modal-content animate" action="#">
        <div id="cust_details" class="container" style="border: 1px solid green;padding: 30px;margin: 20px;">

            <div class="imgcontainer">

                <img src="https://www.w3schools.com/howto/img_avatar2.png" alt="Avatar" class="avatar">
            </div>

            <label for="email"><b>Email</b></label>
            <input type="email" placeholder="Enter Email" name="email" required>

            <label for="password"><b>Password</b></label>
            <input type="password" placeholder="Enter Password" name="password" required>



            <button type="button" onclick="document.getElementById('id01').style.display='none'" class="cancelbtn"
                style="float: left;font-weight: bold;width: auto;padding: 10px 18px;background-color: red;color: black; border: none;cursor: pointer;">Cancel</button>
            <button type="reset"
                style="float: right;font-weight: bold;width: auto;padding: 10px 18px;background-color: red;color: black; border: none;cursor: pointer;">Clear
                Fields
            </button><br><br>
            <button class="modal_btn" type="submit">Login</button>


        </div>
    </form>
</div>