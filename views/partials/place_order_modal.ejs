<!-- Customer details -->
<div id="id06" class="modal">

    <form id="order_form" class="modal-content animate" action="#">

        <div id="cust_details" class="container" style="border: 1px solid green;padding: 30px;margin: 20px;">
            <h3 style="color:green;">Customer Details</h3><br>
            <hr><br>
            <label for="name"><b>Name</b></label>
            <input type="text" name="name" id="cust_name" placeholder="Customer Name" required>

            <label for="email"><b>Email</b></label>
            <input type="email" name="email" id="cust_email" placeholder="Customer Email" required>

            <label for="mob_no"><b>Mobile Number</b></label>
            <input type="text" name="mob_no" id="cust_mob" placeholder="Customer Mobile Number" required>

            <button type="button" onclick="document.getElementById('id06').style.display='none'" class="cancelbtn"
                style="float: left;font-weight: bold;width: auto;padding: 10px 18px;background-color: red;color: black; border: none;cursor: pointer;">Cancel</button>
            <button type="reset"
                style="float: right;font-weight: bold;width: auto;padding: 10px 18px;background-color: red;color: black; border: none;cursor: pointer;">Clear
                Fields
            </button><br><br>
            <button class="modal_btn" type="submit">Place Order</button>
        </div>

    </form>
</div>